// Miguel Sandoval
#include <iostream>
using namespace std;

int sum (int x, int y ){
  int sum=x+y;
return sum;
}

int dif (int x, int y ){
  int dif=x-y;
return dif;
}

int prod (int x, int y ){
  int prod=x*y;
return prod;
}

int di (int x, int y ){
  int di=x/y;
return di;
}

int rem (int x, int y ){
  int rem=x%y;
return rem;
}

int main (){
  int x, y;
cout<<"Type the first number:"<<endl;
cin>>x;
cout<<"Type the second number:"<<endl;
cin>>y;

cout<< " The sum of the numbers is= " <<sum(x,y) <<endl;

cout<< " The difference of the numbers is= " <<dif(x,y) <<endl;

cout<< " The product of both numbers is= " <<prod(x,y) <<endl;

cout<< " The division of the numbers is= " <<di (x,y) <<endl;

cout<< " The remainder of the numbers is= " <<rem(x,y) <<endl;
return 0;
}
